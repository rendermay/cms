{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "customField",
      "required": true,
      "options": {
        "pattern": "name"
      },
      "customField": "plugin::auto-locales-slug.auto-locales-slug"
    },
    "description": {
      "type": "string"
    }
  }
}
